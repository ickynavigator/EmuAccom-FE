{
  "name": "emuaccom-fe",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:base": "eslint",
    "lint:page": "next lint --fix",
    "lint:all": "yarn run lint:base './**/**.{ts,tsx,js,jsx}' && lint:page",
    "prettier": "yarn run prettier:base '**/**.{css,sass,scss,md}'",
    "prettier:base": "prettier --ignore-path .eslintignore --write",
    "format": "yarn run prettier && yarn run lint --fix",
    "format:base": "yarn run lint:base --fix",
    "format:page": "yarn run lint --file",
    "test": "jest --watch --coverage",
    "test:ci": "jest --ci",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mantine/core": "^4.0.7",
    "@mantine/form": "^4.0.7",
    "@mantine/hooks": "^4.0.7",
    "@mantine/next": "^4.0.7",
    "axios": "^0.26.1",
    "next": "12.0.10",
    "react": "17.0.2",
    "react-combine-reducers": "^1.1.1",
    "react-dom": "17.0.2",
    "react-responsive-carousel": "^3.2.23",
    "tabler-icons-react": "^1.42.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "eslint": "8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "jest": "^27.5.1",
    "lint-staged": ">=10",
    "prettier": "^2.5.1",
    "sass": "^1.49.9"
  },
  "lint-staged": {
    "pages/**/*.page.{ts,tsx,js,jsx}": [
      "yarn run format:base"
    ],
    "*(!.page).{ts,tsx,js,jsx}": [
      "yarn run format:base"
    ],
    "*.{css,sass,scss}": [
      "yarn run prettier:base"
    ],
    "*.{md,json}": [
      "yarn run prettier:base"
    ]
  }
}
